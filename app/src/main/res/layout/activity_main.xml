<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/main_radio"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y115"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_jd"
                    style="@style/main_tab_bottom"
                    android:layout_marginTop="0.0dip"
                    android:checked="true"
                    android:drawableTop="@drawable/jd_selector"
                    android:text="进度"
                    android:textColor="#4c4c4c"
                    android:textSize="@dimen/text_size_small" />

                <RadioButton
                    android:id="@+id/rb_tz"
                    style="@style/main_tab_bottom"
                    android:layout_marginTop="0.0dip"
                    android:drawableTop="@drawable/tz_selector"
                    android:text="挑战"
                    android:textColor="#a6a6a6"
                    android:textSize="@dimen/text_size_small" />

                <RadioButton
                    android:id="@+id/rb_move"
                    style="@style/main_tab_bottom"
                    android:layout_marginTop="0.0dip"
                    android:drawableTop="@drawable/move_selector"
                    android:text="MOVE+"
                    android:textColor="#a6a6a6"
                    android:textSize="@dimen/text_size_small" />

                <RadioButton
                    android:id="@+id/rb_jl"
                    style="@style/main_tab_bottom"
                    android:layout_marginTop="0.0dip"
                    android:drawableTop="@drawable/sz_selector"
                    android:text="友好较量"
                    android:textColor="#a6a6a6"
                    android:textSize="@dimen/text_size_small" />

                <RadioButton
                    android:id="@+id/rb_sz"
                    style="@style/main_tab_bottom"
                    android:layout_marginTop="0.0dip"
                    android:drawableTop="@drawable/sz_selector"
                    android:text="设置"
                    android:textColor="#a6a6a6"
                    android:textSize="@dimen/text_size_small" />
            </RadioGroup>

        </RelativeLayout>
    </LinearLayout>

</TabHost>
